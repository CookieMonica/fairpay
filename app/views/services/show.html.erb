<div class="container">
  <div class="service-show">
    <div class="show-img">
      <%= image_tag("https://kitt.lewagon.com/placeholder/users/cookiemonica", style: "object-fit: cover", alt: "Profile Picture")%>
    </div>
    <div class="card-body">
      <div class="show-headers">
        <h1 class="card-title"><%=@service.name  %></h1>
