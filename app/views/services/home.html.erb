          class: "home-searchbar col-md-10 col-md-offset-10",
          placeholder: "What are you looking for?"
      %>
      <div>
        <%= button_tag(type: "submit", class: "btn btn-search") do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
