<div class="container">
  <div>
    <%= form_tag services_path, method: :get, class:'d-flex' do %>
      <%= text_field_tag :query,
        params[:query],
        class: "searchbar col-md-4 col-md-offset-4",
        placeholder: "What are you looking for?"
      %>
      <div>
      </div>
      <p>choose prefered weekdays: </p>
      <%= check_box_tag 'monday', "1", false, class: "checkbox"%>
      <%= label_tag "monday", "Mon"%>
      <%= check_box_tag 'tuesday', "1", false, class: "checkbox"%>
      <%= label_tag "tuesday", "Tue"%>
      <%= check_box_tag 'wednesday', "1", false, class: "checkbox"%>
      <%= label_tag "wednesday", "Wed"%>
      <%= check_box_tag 'thursday', "1", false, class: "checkbox"%>
      <%= label_tag "thursday", "Thu"%>
      <%= check_box_tag 'friday', "1", false, class: "checkbox"%>
      <%= label_tag "friday", "Fri"%>
      <%= check_box_tag 'saturday', "1", false, class: "checkbox"%>
      <%= label_tag "saturday", "Sat"%>
      <%= check_box_tag 'sunday', "1", false, class: "checkbox"%>
      <%= label_tag "sunday", "Sun"%>


      <%= button_tag(type: "submit", class: "btn btn-default") do %>
        <i class="fas fa-search"></i>
      <% end %>
    <% end %>
  </div>

  <%# Option to pick up the the weekdays to search %>

  <div class="services">
    <% @services.each do |service| %>
      <div class="service-card">
          <div class="service-img">
            <%= image_tag("#{service.category.image}", alt: "Category illustration", style:"max-height: 100%; max-width: 100%;")%>

          </div>
          <%# <i class="fas fa-clock fa-s ml-2"></i> %>
          <div class="service-info">
            <h3><%= service.user.nickname %></h3>
            <p><%= service.category.name%></p>
            <p><%= service.location %></p>
          </div>
      </div>
    <% end %>
  <div>
</div>
