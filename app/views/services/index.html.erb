<div class="container">
  <div class="global-searchbar">
    <%= form_tag services_path, method: :get, class:'d-flex' do %>
      <%= text_field_tag :query,
        params[:query],
        class: "searchbar col-md-4 col-md-offset-4",
        placeholder: "Search for a service, category, location..."
      %>
    <div class="dropdown">
      <button class="btn btn-dropdown dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        When?
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><%= check_box_tag 'monday'%><%= label_tag "monday", "Monday"%></li>
        <li><%= check_box_tag 'tuesday'%><%= label_tag "tuesday", " Tuesday"%></li>
        <li><%= check_box_tag 'wednesday'%><%= label_tag "wednesday", " Wednesday"%></li>
        <li><%= check_box_tag 'thursday'%><%= label_tag "thursday", " Thursday"%></li>
        <li><%= check_box_tag 'friday'%><%= label_tag " friday", " Friday"%></li>
        <li><%= check_box_tag 'saturday'%><%= label_tag "saturday", " Saturday"%></li>
        <li><%= check_box_tag 'sunday'%><%= label_tag "sunday", " Sunday"%></li>
      </ul>
    </div>
    <div>
      <%= button_tag(type: "submit", class: "btn btn-search") do %>
          <i class="fas fa-search"></i>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="services">
    <% @services.each do |service| %>
      <%= link_to service_path(service) do %>
        <div class="service-card">
            <div class="service-img">
              <%= image_tag("#{service.category.image}", alt: "Category illustration",
              style:"max-height: 100%; max-width: 100%;")%>
            </div>

            <div class="service-info">
              <p><%= service.category.name%></p>
              <h3><%= service.name%></h3>
              <p><i class="fas fa-user"></i> <%= service.user.nickname %></p>
              <p><i class="fas fa-map-marker-alt"></i> <%= service.location %></p>
            </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
